
extends report_base

block append header
	link(rel='stylesheet', href='../generic_roles.css')

block append contents
	span#role_user_info
		span#username User: #{username1}
		span#nickname Nickname: #{nickname1}
		span#userid User ID: #{userid1}
	table#perms
		tr.tabheader
			td.rolename Rolename
			td.status Type
			td.date Date
		each row in data
			tr
				td.rolename= row.name
				if row.status
					td.status.status_added ADDED
				else
					td.status.status_rm REMOVED

				td.date= row.date
