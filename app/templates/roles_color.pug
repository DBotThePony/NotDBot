
extends report_base

block append header
	link(rel='stylesheet', href='../generic_roles.css')

block append contents
	table#perms
		tr.tabheader
			td.rolename Rolename
			td.old old
			td.new new
			td.date Date
		each row in data
			tr
				td.rolename(style=`color:rgb${row.new};`)= row.name
				td.old(style=`color:rgb${row.old};`)= row.old
				td.new(style=`color:rgb${row.new};`)= row.new
				td.date= row.date

